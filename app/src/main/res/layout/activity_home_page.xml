<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/codereBackground"
    tools:context=".HomePageActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/codereGreen"
        android:fontFamily="sans-serif-black"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:textSize="70dp"
        android:text="Welcome To Home Page"

        />


    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="500dp"
    android:padding="10dp"
        >

    <Button
        android:id="@+id/back_homepage_btn"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="&lt; Back"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_marginRight="5dp"
        android:backgroundTint="@color/codereGreen"
        />
        <Button
            android:id="@+id/next_homepage_btn"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="Next &gt;"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:backgroundTint="@color/codereGreen"
            />
</LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginRight="-180dp"
        android:layout_marginLeft="30dp"
        android:src="@drawable/pngwing" />

</RelativeLayout>